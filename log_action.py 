import logging
import os
from datetime import datetime

# 配置日志
logging.basicConfig(filename='logs/blog_log.log', level=logging.INFO,
                    format='%(asctime)s - %(message)s', datefmt='%Y-%m-%d %H:%M:%S')

def log_event(event_message):
    logging.info(event_message)

if __name__ == "__main__":
    # 记录一个事件示例
    log_event('GitHub Action started')
    
    log_event('GitHub Action completed')
